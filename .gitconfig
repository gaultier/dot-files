[user]
 	name = Philippe Gaultier
 	email = philippe.gaultier@ppro.com
[alias]
	dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFXS; }; f"
[pull]
	rebase = false
[core]
	excludesfile = /Users/pgaultier/.gitignore
	pager = delta
[color]
	pager = no
[delta]
		diff-so-fancy = true
		line-numbers = true
		commit-style = yellow
		file-style = yellow
[url "ssh://git@gitlab.ppro.com/"]
			insteadOf = https://gitlab.ppro.com/
